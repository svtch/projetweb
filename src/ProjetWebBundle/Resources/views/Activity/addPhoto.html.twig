{% extends "::base.html.twig" %}

{% block content %}
    <h1 style="text-align: center">Liste des photos de l'activité {{ activity.activityName }}</h1>
    </br>

    <h2>Date de l'activité : {{ activity.date|date("m/d/Y")|date('Y-m-d') }}</h2>
    </br>
    <h2>Détails de activité : {{ activity.description }}</h2>
    </br>
     {% if activity.price == 0 %}
         <h2>
             L'activité est gratuite</h2>
         {% else %}
             <h2> La participation de l'activité coute :
        {{ activity.price }} €</h2>
     {%  endif %}


    {% for photo in photos %}
        <div style="text-align: center"><img style="width:300px;
height:300px;" src="{{ asset('uploads/' ~ photo.pictureFile) }}" />
        <p style="font-style: italic;">{{ photo.descriptionPhoto }}</p>
        </div>


    {% endfor %}

    <center><h3>Ajouter une photo</h3></center>
    <div class="well">
        <div class="row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="col-lg-12">

                {{ form_row(form.pictureFile) }}
                {{ form_widget (form) }}


                <input type="submit" class="btn btn-primary" value="Send"/>

            </div>

            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}